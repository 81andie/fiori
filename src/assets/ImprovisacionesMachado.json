[
  {
    "id": 1,
    "title": "1",
    "author": "ANDREA HERNÁNDEZ",
    "verses": [
      "Parques de eucalipto,",
      "hojas color de la avellana,",
      "en el fondo del camino,",
      "un sol de oro,",
      "sueños infantiles,",
      "siento ecos pálidos,",
      "la copa vacía,",
      "florecen los desengaños."
    ],
    "background": "textura-de-pared-con-detalles-blancos.jpg",
    "image": "copa.png",
    "ilus": "AHH"
  },
  {
    "id": 2,
    "title": "2",
    "author": "ANDREA HERNÁNDEZ",
    "verses": [
      "La soberbia",
      "y la envidia",
      "son la peor de las compañías."
    ],
    "background": "papelmarronantiguo.jpg",
    "image": "lasoberbia.png",
    "ilus": "AHH"
  },
  {
    "id": 3,
    "title": "3",
    "author": "ANDREA HERNÁNDEZ",
    "verses": [
      "Fría inquietud",
      "de la ausencia otoñal,",
      "el aroma de las hojas mustías,",
      "el eucalipto murió",
      "junto al rosal,",
      "el gris mechón",
      "se hunde en el tiempo,",
      "el reloj no muere,",
      "ni el fondo del espejo",
      "ni sus oscuros secretos."
    ],
    "background": "textura-de-pared-con-detalles-blancos.jpg",
    "image": "espejo.png",
    "ilus": "AHH"
  },
  {
    "id": 4,
    "title": "4",
    "author": "ANDREA HERNÁNDEZ",
    "verses": [
      "Borrada la pena,",
      "tristezas antiguas,",
      "el aroma de las hojarascas,",
      "caravanas llevan",
      "almas que sueñan."
    ],
    "background": "viejo-fondo-de-la-textura-del-papel.jpg",
    "image": "hoja.png",
    "ilus": "AHH"
  },
  {
    "id": 5,
    "title": "5",
    "author": "ANDREA HERNÁNDEZ",
    "verses": [
      "El agua mana",
      "por canales rotos,",
      "el presente,",
      "el mañana,",
      "camino por un sendero viejo."
    ],
    "background": "papelmarronantiguo.jpg",
    "image": "elagua.jpg",
    "ilus": "AHH"
  },
  {
    "id": 6,
    "title": "6",
    "author": "ANDREA HERNÁNDEZ",
    "verses": [
      "Cuán amargas",
      "son las tristezas de amores.",
      "No se borra la pena,",
      "la ingenuidad de la inocencia",
      "se asoma por la plaza,",
      "ecos de infancia,",
      "cadencias en los labios de los niños;",
      "confusa mañana gris;",
      "el hilo del sendero se pierde",
      "entre olivos",
      "infinito,",
      "y en boca de las viejas",
      "moralejas antiguas."
    ],
    "background": "fondo-de-textura-de-pintura-de-aceite-naranja.jpg",
    "image": "paisaje.png",
    "ilus": "AHH"
  }
]

